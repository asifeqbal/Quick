<?xml version='1.0' encoding='utf-8'?>
<widget id="com.quick.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Quick</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
	<preference name="loadUrlTimeoutValue" value="700000" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
	<preference name="fullscreen" value="false" />
	<preference name="SplashScreenDelay" value="7000" />
	<preference name="SplashScreen" value="splash" />
	<preference name="ShowSplashScreenSpinner" value="false" />
	<preference name="orientation" value="portrait" />
	<preference name="target-device" value="universal" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#ee6e73" />
    <preference name="StatusBarStyle" value="blacktranslucent" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
	<platform name="android">
        <icon src="icon.png" />
        <icon density="ldpi" platform="android" src="res/icon/android/icon-36-ldpi.png" />
        <icon density="mdpi" platform="android" src="res/icon/android/icon-48-mdpi.png" />
        <icon density="hdpi" platform="android" src="res/icon/android/icon-72-hdpi.png" />
        <icon density="xhdpi" platform="android" src="res/icon/android/icon-96-xhdpi.png" />
        <icon density="xhdpi" platform="android" src="res/icon/android/icon-144-xhdpi.png" />
        <icon density="xhdpi" platform="android" src="res/icon/android/icon-192-xhdpi.png" />
        <splash density="ldpi" platform="android" src="res/screen/android/screen-ldpi-portrait.png" />
        <splash density="mdpi" platform="android" src="res/screen/android/screen-mdpi-portrait.png" />
        <splash density="hdpi" platform="android" src="res/screen/android/screen-hdpi-portrait.png" />
        <splash density="xhdpi" platform="android" src="res/screen/android/screen-xhdpi-portrait.png" />
        <splash density="xhdpi" platform="android" src="res/screen/android/screen-xxhdpi-portrait.png" />
        <splash density="xhdpi" platform="android" src="res/screen/android/screen-xxxhdpi-portrait.png" />
    </platform>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^7.0.0" />
    <plugin name="cordova-plugin-camera" spec="^4.0.3" />
</widget>
